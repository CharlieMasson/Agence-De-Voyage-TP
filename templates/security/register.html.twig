{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <form method="post">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <h1 class="h3 mb-3 font-weight-normal">Cr√©er un compte</h1>
        <label for="username">Votre adresse mail</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Votre mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control" required>
        <label for="password-confirm">Confirmez votre mot de passe </label>
        <input type="password" name="_password-confirm" id="password-confirm" class="form-control" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('registration') }}"
        >
        <button class="btn btn-lg btn-primary" type="submit">
            S'inscrire
        </button>
    </form>
{% endblock %}
