{% extends 'admin/base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    <h1>Country index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Preposition</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in pagination.items %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.name }}</td>
                <td>{{ country.preposition }}</td>
                <td>
                    <a href="{{ path('app_country_show', {'id': country.id}) }}">show</a>
                    <a href="{{ path('app_country_edit', {'id': country.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="pagination flex justify-center mt-3 font-bold">
        {{ knp_pagination_render(pagination) }}
    </div>

    <a href="{{ path('app_country_new') }}">Create new</a>
{% endblock %}
